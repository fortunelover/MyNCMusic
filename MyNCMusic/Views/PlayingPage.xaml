        <model:GetPlayingIconVisibility x:Key="GetPlayingIconVisibility"/>
        <model:ReturnImageUriWithParam_48 x:Key="ReturnImageUriWithParam_48"/>
        <model:ReturnImageUriWithParam_160 x:Key="ReturnImageUriWithParam_160"/>
    </Page.Resources>
